%ul.breadcrumbs
  %li= link_to "Home", root_path
  %li= link_to 'Fab Spaces', fab_spaces_path
  %li.current= link_to @fab_space, @fab_space

.row
  .columns.large-12
    = title @fab_space
    .row{style: 'margin-bottom: 20px'}
      .columns.large-2= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@fab_space.coordinates}&zoom=13&size=180x180&maptype=roadmap&sensor=false"
      .columns.large-10
        - if can? :edit, @fab_space
          = link_to "Edit", edit_fab_space_path(@fab_space), class: 'button'

        .fab-space-description= simple_format @fab_space.description

